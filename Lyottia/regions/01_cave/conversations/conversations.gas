[join_kothan]
{
	[text*]
	{
		choice = more;
	  i order = 0;
		screen_text = "Oh, thank goodness you showed up here, whoever you are. Those krug have been following me for two days straight.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 1;
		screen_text = "I intended to find myself a lonely place where I could meditate on secrets of magic and practice spellcasting. No long after I left the town, this krug band started following me. I tried to confuse them and flee, but they always tracked me down and cut off all paths to town. After two days, I found this cave...";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 2;
		screen_text = "Before I departed, I bought cheap scrolls of raising golems in town to protect myself. With my deepest energy reserves I raised a few golems to protect me. They were pretty weak for obsidian golems and soon stopped following my orders, but they intimidated the krug enough to stop them from entering the cave. With golems out of control, however, I remained trapped here until you arrived. Next time, I won't be fooled by tempting discounts. I really, really thank you, stranger.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = potential_member;
	  i order = 3;
		screen_text = "You know...with krug in the mountains, my golems raging around and whatever other creatures living here, I am no longer feeling safe enough to travel by myself. How about I accompany you? I may stay with you even after we reach a town, since I have no further plans right now.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = potential_member;
		screen_text = "If you have changed your mind, I am more than willing to join you.";
	  f scroll_rate = 10.000000;
	}
}
