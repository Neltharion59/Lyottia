	[text*]
	{
		screen_text = "I hear you will be travelling into the swamps. Bewarned to avoid the wild goblins there. We are ashamed of their very existence, but our paths seem to cross way too often. They wear furs and bones, perform ritual dances and invoke shamanic magic to protect them. They are not a real force to reckoned with, but venturing through their territories could be dangerous.";
	  f scroll_rate = 10.000000;
	}
}
