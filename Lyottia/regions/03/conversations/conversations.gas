[hassat_female_leader]
{
	[text*]
	{
		choice = more;
	  i order = 0;
		screen_text = "Hold your weapons, humans! I, Abshahe of the great tribe Taerie, beg you to spare our lives. It was our leader, Shebbat, who would force us into battle with humans and other civilised races.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 1;
		screen_text = "Some of us did not cherish his lust for war, but he held the tribe in his iron grip and none of us dared to take action against him. Most of the tribe shared his desire for conquering other sentient races. Now that you have slain him, we are free of his tyranny and to do as we will.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 2;
		screen_text = "Shebbat lead us to war with hassat tribe Guanai. Our tribe was not early as strong as their, and we soon had to flee our homeland in the jungle. He ordered us to settle here, raise our youth and hone our skills so that one day we may return and destroy the Guanai.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 3;
		screen_text = "We cannot return there, the Guanai would hunt our tribe to extinction. Despite Shebbat's intentions with this place, we began to hold this small piece of land dear. Our only wish is to reside here and raise our kittens in peace. Fighting against the mankind is really not tempting.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 4;
		screen_text = "I beg you to leave us in peace, traveler. We will hunt wild creatures, teach our youth and treat our small land with respect. Any humans passing through here will be granted escort of our hunters. No man will come to harm in our lands. All we ask is to be left alone.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		screen_text = "Safe travels, the strongest, the bravest and the kindest of humans. May our tribes live in peace and prosperity for long.";
	  f scroll_rate = 10.000000;
	}
}
