			0 = b_c_edm_057-head;
			1 = b_c_edm_057-body;
		}
		[voice]
		{
			[attack]
			{
				priority = high;
				* = s_e_ds2_gen_hrpy_atk1;
				* = s_e_ds2_gen_hrpy_atk2;
			}
			[cast]
