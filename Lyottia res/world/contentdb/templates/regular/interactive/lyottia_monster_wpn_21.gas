[t:template,n:lyottia_21_goblin_wpn_throwing_ammo]
{
	specializes = base_arrow;
	[aspect]
	{
		material = steel;
		model=m_w_dag_002;
		is_selectable	= false;
		[voice]
		{
			[attack] { * = s_e_swing_01; }
		}
	}
	[attack]
	{
		damage_max = 0;
		damage_min = 0;
	}
	[common]
	{
		is_pcontent_allowed = FALSE;
		screen_name = "Knife";
		[template_triggers]
		{
			[*]
			{
				action* = call_sfx_script("rock_tracer");
				condition* = receive_world_message("WE_ENTERED_WORLD");
				single_shot = true;
			}
		}
	}

	[physics]
	{
		angular_velocity = 8,8,8;
		randomize_velocity = TRUE;
		elasticity = 0.5;
		deflection_angle = .2;
		orient_to_trajectory = FALSE;
	}
}
