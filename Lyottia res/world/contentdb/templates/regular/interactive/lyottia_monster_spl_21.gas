[t:template,n:lyottia_21_goblin_spl_healing_wind]
{
	category_name = "magic";
	doc = "Lyottia 21 Goblin Spell Healing Wind";
	specializes = lyottia_base_spell_monster_nmagic;
	[magic]
	{
		apply_enchantments = false;
		cast_range = 17;
		cast_reload_delay = 1;
		effect_duration = 5;
		requires_line_of_sight = false;
		speed_bias = 1;
		target_type_flags = tt_injured_friend | tt_self;
		target_type_flags_not = tt_dead_friend;
		usage_context_flags = uc_offensive;
		state_name = "heal";


		[enchantments]
		{
			[*]
			{
				alteration = alter_life;
				description = "healing windspell";
				duration = 5.0;
				frequency = 0.5;
				initial_delay = 1.0;
				value = 120;
			}
		}
	}
	[spell_mass_enchant]
	{
		effect_script	= "healing_wind";
		enchant_script	= "healing_wind_individual";
		radius			= 15.0;
		description		= "Healing";
		effect_delay	= 10;
	}
}
