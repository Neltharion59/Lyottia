[t:template,n:lyottia_04_chest_rare]
{
    category_name       =   "container";
	doc = "Lyottia 04 Ctn Chest Rare";
	specializes = base_chest;
	[aspect]
	{
		model = m_i_glb_chest-07;
		[textures]
		{
			0 = b_i_csl_chest-06;
		}
	}
	[attack]
	{
		damage_max = 60;
		damage_min = 60;
	}
	[body]
	{
		[chore_dictionary]
		{
			chore_prefix = a_i_glb;
			[chore_close]
			{
				skrit = transition;
				[anim_files]
				{
					00 = chest-07-close;
				}
			}
			[chore_open]
			{
				skrit = transition;
				[anim_files]
				{
					00 = chest-07-open;
				}
			}
		}
	}
	[inventory]
	{
		[pcontent]
		{
			[all*]
			{
				[gold*]
				{
					max = 50000;
					min = 10000;
				}
				[oneof*]
				{
					chance = 0.80;
					il_main = #weapon/20-40;
					il_main = #armor/25-102;
					il_main = #*/20-40;
					min = 1;
					max = 4;
				}
				[oneof*]
				{
					chance = 0.10;
					il_main = #weapon/-rare(1)/20-40;
					il_main = #armor/-rare(1)/25-102;
					il_main = #*/-rare(1)/20-40;
				}
				[oneof*]
				{
					chance = 0.05;
					il_main = #weapon/-unique(2)/20-40;
					il_main = #armor/-unique(2)/25-102;
					il_main = #*/-unique(2)/20-40;
				}
			}
		}
	}
	[trapped]
	{
		trap = trp_generator_frost_chest;
		fire_event = WE_REQ_USE;
	}
}
