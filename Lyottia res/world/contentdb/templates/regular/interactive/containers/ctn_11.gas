	category_name	= "container";

	aspect:model	= m_i_glb_barrel;
	
	[inventory]
	{
		[pcontent]
		{

			[all*]
			{
				[oneof*]
				{
					chance = 0.15;
					il_main = #*/89-105;
					il_main = #armor/53-266;
					il_main = potion_health_large;
					il_main = potion_mana_large;
					min = 1;
					max = 2;
				}
				[gold*]
				{
					chance = 0.125;
					max = 14050;
					min = 11800;
				}
			}
		}
	}
}
[t:template,n:lyottia_11_barrel_float]
{
	specializes		= base_container_barrel;
	doc				= "barrel_base";
	category_name	= "container";

	aspect:model		= m_i_glb_barrel-03;
	aspect:textures:0	= b_i_glb_barrel;
	[body]
	{
		initial_chore =	chore_default;
		[chore_dictionary]
		{
			chore_prefix = a_i_glb;
			[chore_default]
			{
				skrit =	infinite_loop;
				[anim_files] { 00=barrel-03-float; }
			}
		}
	}
	
	[inventory]
	{
    	[pcontent]
		{
			[all*]
			{
				[oneof*]
				{
					chance = 0.5;
					il_main = #*/89-105;
					il_main = #armor/53-266;
					il_main = potion_health_large;
					il_main = potion_mana_large;
					min = 2;
					max = 3;
				}
			}
		}
	}
}
[t:template,n:lyottia_11_chest_super_rare]
{
	category_name = "container";
	doc = "Lyottia 11 Chest";
	specializes = base_chest;
	[common] { screen_name="Chest"; }
	[aspect]
	{
		material = steel;
		model = m_i_glb_chest-02;
	}
	[body]
	{
		[chore_dictionary]
		{
			chore_prefix = a_i_glb;
			[chore_open]
			{
				skrit = transition;
				[anim_files] { 00=chest-02-open; }
			}
		}
	}
    [inventory]
	{
		[pcontent]
		{
            [gold*]
            {
                chance = 0.75;
                max = 19242;
                min = 6781;
                piles = 3 - 5;
            }
            [oneof*]
            {
                il_main = #weapon/-unique(2)/72-115;
                il_main = #armor/-unique(2)/220-320;
                il_main = #*/-unique(2)/72-115;
            }
		}
	}
}