[t:template,n:lyottia_potion_crystal_health]
{
	specializes         = base_potion_good;
	doc                 = "Lyottia Potion Crystal Health";
	category_name       = "potions";

	aspect:model        = m_i_cav_gems-01;
	aspect:textures:0   = b_i_cav_gems-05-static;
    aspect:gold_value   = 10000;
    aspect:scale_base   = 0.2;

	[common]
	{
		is_pcontent_allowed = false;
		screen_name  = "Life Essence";
		[template_triggers]
		{
			[*]
			{
				action* = call_sfx_script( "potion_sparkle_red" );
				condition* = receive_world_message("we_dropped");
			}
		}
	}
	[magic]
	{
		[enchantments]
		{
			[*]
			{
				alteration          = alter_life;
				value               = 5000;
				max_value           = 5000;
				//description         = "healing potion";

				duration            = 0;
				frequency           = 0;

				is_value_limited    = true;
				is_enhancement      = true;
				is_permanent        = true;
				is_transmissible    = false;
				is_single_instance  = false;
				is_active           = false;
				effect_script_equip = health_potion_medium;
			}
		}
	}

	gui:inventory_icon          = b_gui_ig_i_it_potion_crystal_health;

	potion:inventory_icon_2     = b_gui_ig_i_it_potion_crystal_health;
}
