[t:template,n:lyottia_20_bone_minion_spl_spell_storm_blades]
{
	category_name = "magic";
	doc = "Lyottia 20 Bone minion spell flame blades";
	specializes = lyottia_base_spell_monster_nmagic;
	[attack]
	{
		damage_max = 800;
		damage_min = 800;
	}
	[common]
	{
		[template_triggers]
		{
			[*]
			{
				action* = call_sfx_script( "lyottia_20_storm_blades" );
				condition* = receive_world_message("we_req_cast");
			}
		}
	}
	[magic]
	{
		cast_range = 22;
		cast_reload_delay = 0.15;
		requires_line_of_sight = true;
		speed_bias = 1;
		target_type_flags = tt_conscious_enemy | tt_unconscious_enemy | tt_breakable;
		usage_context_flags = uc_offensive;
	}
}
