[t:template,n:lyottia_01_monster_spl_leech_life_ghost]
{
	category_name = "magic";
	doc = "Lyottia 01_cave Monster Spell Leech Life Ghost";
	specializes = base_spell_monster;
	[attack]
	{
		damage_max = 5;
		damage_min = 5;
	}
	[common]
	{
		description = "Tears <alter_life> Health from the Enemy and gives it to the Caster.";
		[template_triggers]
		{
			[*]
			{
				action* = call_sfx_script( "leech_life_cast" );
				condition* = receive_world_message("we_req_cast");
			}
			[*]
			{
				action* = call_sfx_script( "leech_life_charge" );
				condition* = receive_world_message("we_req_cast_charge");
			}
		}
	}
	[magic]
	{
		cast_range = 8;
		cast_reload_delay = 1;
		mana_cost = 0;
		requires_line_of_sight = true;
		speed_bias = 1;
		target_type_flags = tt_conscious_enemy | tt_unconscious_enemy;
		usage_context_flags = uc_offensive;
		apply_enchantments = false;
		
		[enchantments]
		{
			[*]
			{
				alteration = alter_life;
				description = "leech life";
				duration = 1.1;
				frequency = 0.1;
				initial_delay = 0.0;
				is_enhancement = true;
				is_permanent = true;
				max_value = 10;
				value = ( ( #src_life > (5.0) ) ? (5) : ( ( #src_life > 0.0 ) ? #src_life : 0.0 ) )/10.0;
			}
		}
	}
	[spell_instant_hit] 
	{
		piercing		= true;
		apply_enchant	= true;
	}
}
[t:template,n:lyottia_01_monster_spl_rip_mana_ghost]
{
	category_name = "magic";
	doc = "Lyottia 01_cave Monster Spell Rip Mana Ghost";
	specializes = base_spell_monster;
	[common]
	{
		[template_triggers]
		{
			[*]
			{
				action* = call_sfx_script("rip_mana");
				condition* = receive_world_message("we_req_cast");
			}
		}
	}
	[magic]
	{
		cast_range = 8;
		cast_reload_delay = 1;
		mana_cost = 0;
		requires_line_of_sight = true;
		speed_bias = 1;
		target_type_flags = tt_can_store_mana | tt_and | tt_conscious_enemy;
		usage_context_flags = uc_offensive;
		[enchantments]
		{
			[*]
			{
				alteration = alter_mana;
				description = "mana channel";
				effect_script = mana_trail;
				initial_delay = 0.0;
				is_enhancement = true;
				is_permanent = true;
				is_source_transfer = true;
				is_target_transfer = false;
				is_offensive_transfer = true;
				transfer_efficiency = 1;
				value = 10;
			}
		}
	}
	[spell_default] {}
}
[t:template,n:lyottia_01_monster_spl_summon_ghost]
{
	category_name = "magic";
	doc = "Lyottia 01 ghost Spell Summon";
	specializes = lyottia_base_spell_monster_nmagic;
	[inventory]
	{
		[delayed_pcontent]
		{
			[oneof*]
			{
				[all*]
				{
					chance = 1.00;
					il_main = lyottia_01_cave_spider;
				}
			}
		}
	}
	[magic]
	{
		cast_range = 8;
		cast_reload_delay = 1;
		effect_duration = 10;
		requires_line_of_sight = true;
		require_state_check = true;
		speed_bias = 1;
		target_type_flags = tt_conscious_enemy | tt_unconscious_enemy;
		usage_context_flags = uc_offensive;
		state_name = "Controlling";
		caster_state_name = "Controlling";
	}
	[spell_summon_multiple]
	{
		flee = false;
		watch_summoned  = false;
		spawn_num		= 1;
		effect_script	= "fire_summon";
		spawn_radius	= 10.0;
		spawn_rate		= .05;
		description = "Summoned Creature";
		caster_description = "Controlling Summoned";
	}
}