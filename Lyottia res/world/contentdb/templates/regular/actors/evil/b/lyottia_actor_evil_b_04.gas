[t:template,n:lyottia_04_mage_ghost]
{
	category_name = "1W_evil_b";
	doc = "Lyottia 04 Mage Ghost";
	specializes = actor_evil;
	
	[actor]
	{
		[skills]
		{
			strength =  	23, 0;
			intelligence =  31, 0;
			dexterity =  	16, 0;
			combat_magic = 	10, 0;
		}
	}
	[aspect]
	{
		experience_value = 2000;
		life = 254;
		max_life = 254;
		mana = 1400;
        max_mana = 1400;
		draw_shadow = false;
		model = m_c_edm_gh_pos_1;
		
		[textures] { 0=b_c_edm_gh-static; }
		[voice]
		{
			[die]
			{
				  * = s_e_die_ghost;
			}
		}
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 120;
		damage_min = 100;
	}
	[body]
	{
		avg_move_velocity = 2.720000;
		[bone_translator]
		{
			body_anterior = bip01_head;
			body_mid = bip01_neck;
			body_posterior = bip01_pelvis;
			kill_bone = bip01_spine;
			shield_bone = shield_grip;
			weapon_bone = weapon_grip;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_edm_gh_fs;
			[chore_attack]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] { 00=at; }
			}
			[chore_magic]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] { 00=at; }
			}
			[chore_default]
			{
				chore_stances = 0;
				skrit = infinite_loop;
				[anim_files] { 00=dfs; }
			}
			[chore_die]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files] { 00=ds; }
			}
			[chore_misc]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files]
				{
					slep = dfs;
					wake = ds;
				}
			}
			[chore_fidget]
			{
				chore_stances = 0;
				skrit = select_fidget;
				[anim_files] { 00=dsf; }
			}
			[chore_walk]
			{
				chore_stances = 0;
				skrit = select_walk;
				[anim_files] { 00=wl; }
			}
		}
	}
	[common]
	{
		screen_name="Tirrik Amnetan";
		membership = monster,immune_charm,immune_control,immune_freeze,immune_polymorph,immune_align_change,immune_explode;
		[template_triggers]
		{
			[*]
			{
				single_shot = true;
				action* = call_sfx_script("ghost_eye_glow");
				condition* = receive_world_message("we_enemy_spotted");
			}
		}
	}
	[defend] { defense=220; }
	[inventory]
	{
		selected_active_location = il_active_primary_spell;
		[other]
		{
			il_active_primary_spell = lyottia_04_monster_spl_leech_life;
			il_active_secondary_spell = lyottia_04_monster_spl_rip_mana;
			il_spell_1 = lyottia_04_monster_spl_mana_shield;
		}
    	[pcontent]
		{
			[oneof*]
			{
				il_main = #ring/20-40;
                il_main = #amulet/22-41;
				min = 2;
				max = 4;
			}
		}
	}
	[mind]
	{
		melee_engage_range = 14;
		personal_space_range = 0.7;
		ranged_engage_range = 14.0;
		sight_range = 14.0;
	
		jat_startup = world\ai\jobs\common\job_startup_reveal.skrit
			?invisible = true;
		
		jat_fidget	= world\ai\jobs\common\job_fidget.skrit;
		
		jat_cast 						= world\ai\jobs\common\job_cast.skrit
			?rand_spell					= true;
		
		actor_auto_fidgets = false;
		sight_origin_height = 1;
		
		actor_weapon_preference			= WP_MAGIC;
		actor_auto_switches_to_magic	= true;
		actor_auto_switches_to_karate	= false;
		actor_auto_switches_to_melee	= false;
	}
	[physics]
	{
		break_effect = ghost_die;
		explode_when_killed = true;
		gib_gore_good = true;
	}
}
