[t:template,n:lyottia_14_mantrap_greater]
{
	category_name = "1W_evil_b";
	doc = "Lyottia 14 Mantrap Greater";
	specializes = actor_evil;
	[actor]
	{
		[skills]
		{
			strength =     90, 0;
			intelligence = 90, 0;
			dexterity =    20, 0;

			melee			= 60, 0;
			combat_magic	= 60, 0;
			nature_magic	= 60, 0;
		}
	}
	[aspect]
	{
		experience_value = 2670220;
		life             = 53113;
		max_life         = 53113;
		mana             = 1373;
		max_mana         = 1373;

        model = m_c_edm_mw_pos_1;
		textures:0 = b_c_edm_mantrap_lyottia_01;
		material = flesh;
        scale_base = 1.3;
		[voice]
		{
			[cast]			{ * = s_e_attack_mantrap_SED; }
			[die]			{ priority = high;	* = s_e_die_mantrap;		}
			[enemy_spotted]	{ priority = high; * = s_e_ground_burst_SED; }
		}
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 365;
		damage_min = 351;
	}
	[body]
	{
		avg_move_velocity = 0;
		[bone_translator]
		{
			body_anterior = bone04;
			body_mid = bone03;
			body_posterior = bone02;
			kill_bone = bone03;
			shield_bone = bone03;
			weapon_bone = AP_flame;
		}
		[chore_dictionary]
		{
			initial_chore = chore_none;
			chore_prefix = a_c_edm_mw_fs;
			[chore_attack]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files]
				{
					00=at;
					01=at-02;
				}
			}
			[chore_default]
			{
				chore_stances = 0;
				skrit = infinite_loop;
				[anim_files] { 00=ds; }
			}
			[chore_misc]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files]
				{
					slep = ds;
					wake = rv;
				}
			}
			[chore_die]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 0;
				skrit = select_fidget;
				[anim_files] { 00=dff; }
			}
			[chore_magic]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] { 00=mg; }
			}
			[chore_walk]
			{
				chore_stances = 0;
				skrit = select_walk;
				[anim_files] { 00=dsf; }
			}
		}
	}
	[common]
	{
		screen_name = "Whuenatillip";
        membership=monster,immune_charm,immune_control,immune_freeze,immune_polymorph,immune_align_change,immune_explode;
		[template_triggers]
		{
			[*]
			{
				action* = call_sfx_script("mine_worm_dust");
				condition* = receive_world_message("we_anim_sfx",1);
			}
			[*]
			{
				action* = call_sfx_script("mine_worm_die_dust");
				condition* = receive_world_message("we_anim_die");
			}
            [*]
			{
				condition* = receive_world_message("WE_ENTERED_WORLD");
				single_shot = true;
				no_trig_bits = true;
				action* = call_sfx_script("unique_ray_cyan(sgx)");
			}
		}
	}
	[defend] { defense = 150; }
	[inventory]
	{
		selected_active_location = il_active_primary_spell;
		[other] { il_active_primary_spell=lyottia_14_mantrap_greater_spell_spikes; }
		[pcontent]
		{
			[all*]
			{
				[oneof*]
				{
					chance = 1.00;
					il_main = #weapon/-rare(1)/100-200;
					il_main = #armor/-rare(1)/300-600;
					il_main = #*/-rare(1)/100-200;
					il_main = #weapon/-unique(2)/100-200;
					il_main = #armor/-unique(2)/300-600;
					il_main = #*/-unique(2)/100-200;
					min = 2;
					max = 3;
				}			
			}
		}
	}
	[mind]
	{
		jat_die									= world\ai\jobs\actors\evil\job_die_delete.skrit;
		jat_startup								= world\ai\jobs\common\job_startup_reveal.skrit
			?invisible							= true;

		jat_flee_from_object					= jat_none;
		jat_guard											= jat_none;
		jat_move											= jat_none;
		jat_patrol										= jat_none;

		on_enemy_entered_icz_switch_to_melee	= true;

		actor_weapon_preference					= WP_MAGIC;
		actor_auto_switches_to_magic			= true;
		actor_auto_switches_to_karate			= true;
		actor_auto_switches_to_melee			= true;

		actor_auto_fidgets						= false;
		movement_orders							= mo_hold;
		inner_comfort_zone_range				= 4.4;
		melee_engage_range						= 4.5;
		personal_space_range					= 2.0;
		on_enemy_entered_ocz_attack				= true;
		ranged_engage_range						= 30.0;
		sight_range								= 34.0;
		sight_origin_height						= 2;
	}
	// skrit component that handles the tentacles
	[dsx_krakbone_spawn_monitor]
	{
		meleeTemplate = "lyottia_14_mantrap";
		rangedTemplate = "lyottia_14_mantrap";
		summonRatio1to2 = 0.75;
		maxTotalSummons = 30;
		maxSummons = 2;
		summonEffect = "water_column_emitter":
		initialDelay = 1;
		waitInterval = 10;
	}
}