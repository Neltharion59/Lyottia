	specializes = lyottia_ds2_crawn_base;
	[actor]
	{
		[skills]
		{
			strength = 20, 0;
			dexterity = 20, 0;
			intelligence = 15, 0;
			combat_magic = 8, 0;
		}
	}
	[aspect]
	{
		experience_value = 4500;
		life = 542;
		max_life = 542;
		mana = 2050;
		max_mana = 2050;
