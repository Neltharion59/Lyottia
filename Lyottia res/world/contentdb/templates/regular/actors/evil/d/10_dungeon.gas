[t:template,n:lyottia_10_rector_base]
{
	category_name = "1W_evil_d";
	doc = "Lyottia 10 Rector Base";
	specializes = actor_evil;
	[aspect]
	{
		model = m_c_edm_rt_pos_1;
		[voice]
		{
			[cast]			{ * = s_e_attack_rector; }
			[die]			{ priority = high; * = s_e_die_rector; }
			[hit_glance]	{ priority = low; * = s_e_hit_rector_SED; }
		}
	}
	[body]
	{
		min_move_velocity = 1.75;
		avg_move_velocity = 3.0;
		[bone_translator]
		{
			body_anterior = Bone01;
			body_mid = Bone01;
			body_posterior = Bone01;
			kill_bone = Bone01;
			shield_bone = Bone01;
			weapon_bone = Bone01;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_edm_rt_fs;
			[chore_attack]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] { 00=at; }
			}
			[chore_magic]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] { 00=at; }
			}
			[chore_default]
			{
				chore_stances = 0;
				skrit = infinite_loop;
				[anim_files] { 00=dfs; }
			}
			[chore_die]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files] { 00=dfs; }
			}
			[chore_fidget]
			{
				chore_stances = 0;
				skrit = select_fidget;
				[anim_files] { 00=dff; }
			}
			[chore_walk]
			{
				chore_stances = 0;
				skrit = select_walk;
				[anim_files] { 00=wl; }
			}
		}
	}
	[common]
	{
		membership = monster, party_bandit_ranged, bandit;
	}
   	[mind]
	{
		actor_weapon_preference			= WP_MAGIC;
		actor_auto_switches_to_magic	= true;
		actor_auto_switches_to_karate	= false;
		actor_auto_switches_to_melee	= false;

		com_channels = dyn_party, bandit;
		com_range = 22.0;
		on_enemy_spotted_alert_friends	= true;

		jat_brain						= world\ai\jobs\common\brain_hero.skrit
			?actor_creates_own_party		= true
			&actor_joins_existing_party		= true
			&party_template					= "party_bandit_ranged";

        inner_comfort_zone_range = 25.0;
        outer_comfort_zone_range = 25.0;

		melee_engage_range = 25.0;
		personal_space_range = 0.7;
		ranged_engage_range = 25.0;
		sight_range = 25.0;
		sight_origin_height = 1;		
	}
	[physics]
	{
        break_effect = ghost_die;
		explode_when_killed = true;
		gib_gore_good = true;
	}
}
