		}
    }
	[defend] { defense=350; }
    [inventory]
	{
   		selected_active_location = il_active_secondary_spell;
		[other]
		{
			il_active_primary_spell = lyottia_10_rector_flame;
			il_active_secondary_spell = lyottia_10_spell_rector_burn;
		}
		[pcontent]
		{
			[all*]
			{
				chance = 0.05;
				il_main = #spell/36-66;
				max = 2;
				min = 1;
			}
		}
