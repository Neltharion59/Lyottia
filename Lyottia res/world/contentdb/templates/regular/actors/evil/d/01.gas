[t:template,n:lyottia_01_wolf]
{
	category_name = "1W_evil_d";
	doc = "Lyottia 01 Wolf";
	specializes = base_wolf;
	[actor]
	{
		[skills]
		{
			strength =  4, 0;
			intelligence =  1, 0;
			dexterity =  5, 0;
            melee =  1,  0;
		}
	}
	[aspect]
	{
		experience_value = 7;
		life = 9;
        max_life = 9;
        mana = 2;
        max_mana = 2;
        textures:0 = b_c_edm_lwh_wolf_02;
        scale_base = 0.71;
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 6;
		damage_min = 3;
	}

	[defend] { defense=9; }
	[common]
	{
		screen_name="Wolf";
		membership = monster, party_wolf_gray_boss;
	}
	[mind]
	{
		jat_brain						= world\ai\jobs\common\brain_hero.skrit
			?actor_joins_existing_party	= true
			&actor_creates_own_party	= true
			&party_template				= "party_wolf_gray_boss";

		jat_attack_object_melee	= world\ai\jobs\common\job_attack_object_melee.skrit
			?cautious_chance	= 0.9
			&min_cautious_distance = 2.00
			&cautious_approach_distance = 1.25;

	}

}
[t:template,n:lyottia_01_wolf_boss_01]
{
	category_name = "1W_evil_d";
	doc = "Lyottia 01 Wolf Boss 01";
	specializes = base_wolf;
	[actor]
	{
		[skills]
		{
			strength =  5, 0;
			intelligence =  2, 0;
			dexterity =  8, 0;
            melee =  4, 0;
		}
	}
	[aspect]
	{
		experience_value = 33;
		life = 24;
        max_life = 24;
        mana = 2;
        max_mana = 2;
        textures:0 = b_c_edm_lwh_wolf_01;
        scale_base = 0.93;
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 9;
		damage_min = 6;
	}

	[defend] { defense=16; }
	[common]
	{
		screen_name="Alpha Wolf";
		membership = monster,immune_charm,immune_control,immune_freeze,immune_polymorph,immune_align_change,immune_explode;
		[template_triggers]
		{
			[*]
			{
				condition* 	= receive_world_message("WE_ENTERED_WORLD");
				single_shot = true;
				no_trig_bits = true;
				action* 	= call_sfx_script("unique_ray_blue(sgx)");
				action* 	= call_sfx_script("unique_light_blue(sgx)");
			}

		}

	}

	[mind]
	{
		jat_fidget						= world\ai\jobs\common\job_fidget.skrit
			?still							= false;

		jat_brain						= world\ai\jobs\common\brain_hero.skrit
			?actor_creates_own_party			= true
			&form_party_on_friend_entered_OCZ	= true
			&form_party_on_friend_entered_ICZ	= true
			&party_template						= "party_wolf_gray_boss";
	}
}
