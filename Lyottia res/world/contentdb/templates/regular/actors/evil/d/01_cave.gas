[t:template,n:lyottia_01_cave_ghost]
{
	category_name = "1W_evil_d";
	doc = "Lyottia 01_cave ghost";
	specializes = actor_evil;
	
	[actor]
	{
		[skills]
		{
			strength =  	5, 0;
			intelligence =  20, 0;
			dexterity =  	11, 0;
			combat_magic = 	3, 0;
		}
	}
	[aspect]
	{
		experience_value = 26;
		life = 16;
		max_life = 16;
		mana = 140;
        max_mana = 140;
		draw_shadow = false;
		model = m_c_edm_gh_pos_1;
		
		[textures] { 0=b_c_edm_gh-static; }
		[voice]
		{
			[die]
			{
				  * = s_e_die_ghost;
			}
		}
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 8;
		damage_min = 4;
	}
	[body]
	{
		avg_move_velocity = 2.720000;
		[bone_translator]
		{
			body_anterior = bip01_head;
			body_mid = bip01_neck;
			body_posterior = bip01_pelvis;
			kill_bone = bip01_spine;
			shield_bone = shield_grip;
			weapon_bone = weapon_grip;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_edm_gh_fs;
			[chore_attack]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] { 00=at; }
			}
			[chore_magic]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] { 00=at; }
			}
			[chore_default]
			{
				chore_stances = 0;
				skrit = infinite_loop;
				[anim_files] { 00=dfs; }
			}
			[chore_die]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files] { 00=ds; }
			}
			[chore_misc]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files]
				{
					slep = dfs;
					wake = ds;
				}
			}
			[chore_fidget]
			{
				chore_stances = 0;
				skrit = select_fidget;
				[anim_files] { 00=dsf; }
			}
			[chore_walk]
			{
				chore_stances = 0;
				skrit = select_walk;
				[anim_files] { 00=wl; }
			}
		}
	}
	[common]
	{
		screen_name="Ghost";
		membership=monster,immune_freeze;
		[template_triggers]
		{
			[*]
			{
				single_shot = true;
				action* = call_sfx_script("ghost_eye_glow");
				condition* = receive_world_message("we_enemy_spotted");
			}
		}
	}
	[defend] { defense=15; }
	[inventory]
	{
		selected_active_location = il_active_primary_spell;
		[other] { il_active_primary_spell=lyottia_01_cave_ghost_spl_leech_life; }
    	[pcontent]
		{
			[oneof*]
			{
				chance = 0.50;
				il_main = #ring/2-17;
                il_main = #amulet/2-17;
			}
		}
	}
	[mind]
	{
		melee_engage_range = 14;
		personal_space_range = 0.7;
		ranged_engage_range = 14.0;
		sight_range = 14.0;
	
		jat_startup = world\ai\jobs\common\job_startup_reveal.skrit
			?invisible = true;
		
		jat_fidget	= world\ai\jobs\common\job_fidget.skrit;
		
		actor_auto_fidgets = false;
		sight_origin_height = 1;
		
		actor_weapon_preference			= WP_MAGIC;
		actor_auto_switches_to_magic	= true;
		actor_auto_switches_to_karate	= false;
		actor_auto_switches_to_melee	= false;
	}
	[physics]
	{
		break_effect = ghost_die;
		explode_when_killed = true;
		gib_gore_good = true;
	}
}