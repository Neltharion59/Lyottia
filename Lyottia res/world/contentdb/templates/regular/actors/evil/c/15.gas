[t:template,n:lyottia_15_wraith_unarmed]
{
	category_name = "1W_evil_c";
	doc = "Lyottia 15 Wraith Unarmed";
	specializes = base_wraith;
	[actor]
	{
		[skills]
		{
			strength = 		80, 0;
			intelligence = 	20, 0;
			dexterity = 	80, 0;
   			melee =  		55,  0;
		}
	}
	[aspect]
	{
		experience_value = 120000;
		life = 1561;
		max_life = 1561;
		mana = 500;
		max_mana = 500;
		model = m_c_ecm_wr_pos_1;
		[textures] { 0=b_c_ecm_wr; }
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 255;
		damage_min = 205;
	}
	[body]
	{
		[chore_dictionary]
		{
			chore_prefix = a_c_ecm_wr_fs;
			[chore_attack]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files]
				{
					00 = at;
					01 = at-02;
					02 = at-03;
					03 = at-04;
					04 = at-05;
				}
			}
			[chore_default]
			{
				chore_stances = 0;
				skrit = infinite_loop;
				[anim_files] { 00=dfs; }
			}
			[chore_die]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_misc]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files]
				{
					stil = ds;
					wake = up;
				}
			}
			[chore_fidget]
			{
				chore_stances = 0;
				skrit = select_fidget;
				[anim_files] { 00=dff; }
			}
			[chore_walk]
			{
				chore_stances = 0;
				skrit = select_walk;
				[anim_files] { 00=wl; }
			}
		}
	}
	[effect_manager_server]
	{
		effect_name	= "wraith_flame_head";
	    repeat		= false;

	    start_msg	= WE_ENEMY_SPOTTED;
	    stop_msg	= WE_KILLED;
	}
	[common]
	{
		screen_name="Warrior Wraith";
		membership=monster,wraith;
		[template_triggers]
		{
			[*]
			{
				condition* = receive_world_message("WE_ENTERED_WORLD");
				single_shot = true;
				action* = call_sfx_script("wraith_tracer","shield_grip");
				action* = call_sfx_script("wraith_tracer","weapon_grip");
			}
		}
	}
   	[defend] { defense=410; }
   	[inventory]
	{
    	[pcontent]
		{
            [oneof*]
			{
				[oneof*]
				{
					chance = 0.25;
					il_main = #*/115-140;
                    il_main = #armor/350-421;
	                il_main = #spell/56-75;
				}
				[oneof*]
				{
	            	chance = 0.006;
	                il_main = #weapon/-rare(1)/115-140;
	                il_main = #armor/-rare(1)/350-421;
                    il_main = #*/-rare(1)/115-140;
                }
				[oneof*]
				{
                	chance = 0.003;
	                il_main = #weapon/-unique(2)/115-140;
	                il_main = #armor/-unique(2)/350-421;
                    il_main = #*/-unique(2)/115-140;
	            }
				[gold*]
				{
					chance = 0.075;
					max = 130100;
					min = 110320;
				}
			}
		}
	}
	[mind]
	{
		jat_brain						= world\ai\jobs\common\brain_hero.skrit
			?actor_creates_own_party	= true
			&party_template				= "party_wraith";
	}

	[physics]
	{
		[break_particulate]
		{
			frag_glb_wraith_01 = 1;
			frag_glb_wraith_02 = 1;
			frag_glb_wraith_03 = 2;
			frag_glb_wraith_04 = 1;
			frag_glb_wraith_05 = 3;
			frag_glb_wraith_06 = 2;
			frag_glb_wraith_08 = 1;
		}
	}
}
