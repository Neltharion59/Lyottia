				chore_stances = 0,3;
				skrit = infinite_loop;
				[anim_files] { 00=ds; }
			}
			[chore_die]
			{
				chore_stances = 0,3;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 0,3;
				skrit = select_fidget;
				[anim_files] { 00=dff; }
			}
			[chore_walk]
			{
				chore_stances = 0,3;
				skrit = select_walk;
				[anim_files] { 00=wl; }
			}
		}
	}
	[common] { screen_name="Skinned"; }
	[defend] { defense=0; }
   	[inventory]
	{
    	[pcontent]
		{
			[all*]
			{
            		es_weapon_hand = ax_un_2h1b_darkblood;
            }

			[oneof*]
			{
				[oneof*]
				{
					chance = 0.45;
					il_main = #*/94-140;
					il_main = #armor/168-334;
	                il_main = #nmagic/30-48;
	                il_main = #cmagic/30-48;
				}
				[oneof*]
				{
	            	chance = 0.004;
	                il_main = #weapon/-rare(1)/90-140;
	                il_main = #armor/-rare(1)/168-335;
                    il_main = #*/-rare(1)/90-140;
                }
				[oneof*]
				{
                	chance = 0.002;
	                il_main = #weapon/-unique(2)/90-140;
	                il_main = #armor/-unique(2)/168-335;
                    il_main = #*/-unique(2)/90-140;
	            }
				[gold*]
				{
					chance = 0.125;
					max = 28400;
					min = 5100;
				}
			}
		}
	}
	[mind]
	{
		melee_engage_range = 14;
		personal_space_range = 0.7;
		ranged_engage_range = 14.0;
		sight_range = 14.0;
	}
}
