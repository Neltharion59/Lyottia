[t:template,n:lyottia_20_seck_melee]
{
	category_name = "1W_evil_a";
	doc = "Lyottia 20 Seck Melee";
	specializes = base_seck;
	[actor]
	{
		[skills]
		{
			strength =  	75, 0;
			intelligence =  60, 0;
			dexterity =  	60, 0;
			melee =  		122, 0;
		}
	}
	[aspect]
	{
		experience_value = 481000111;
		life = 2214;
		max_life = 2214;
		mana = 440;
		max_mana = 440;
		model = m_c_eam_sg_pos_1;
		[textures] { 0=b_c_eam_sg; }
	}

	[attack]
	{
		attack_range = 0.5;
		damage_max = 800;
		damage_min = 800;
	}
	[common]
	{
		screen_name="Seck Grunt";
        [template_triggers]
		{
			[*]
			{
				single_shot = true;
				action* = call_sfx_script("seck_reveal");
				condition* = receive_world_message("we_enemy_spotted");
			}
			[*]
			{
				action* = call_sfx_script("seck_warrior_flames");
				action* = call_sfx_script("seck_swap");
				condition* = receive_world_message("we_killed");
			}
			[*]
			{
				action* = call_sfx_script("seck_explosion");
				condition* = receive_world_message("we_anim_die");
			}
		}
	}
	[defend] { defense=1100; }
   	[inventory]
	{
		selected_active_location = IL_ACTIVE_MELEE_WEAPON;
		spew_equipped_kill_count = <ignore>;
		[equipment]
		{
			es_weapon_hand = sd_un_seck_1h_avg;
		}
		[pcontent]
		{
			[all*]
			{
				[oneof*]
				{
					chance = 0.35;
					il_main = #*/300-350;
					il_main = #armor/600-800;
	    			il_main = potion_mana_super;
					il_main = potion_health_super;
                    il_main = #nmagic/70-100;
	                il_main = #cmagic/70-100;
					min = 1;
					max = 2;
				}
				[oneof*]
				{
	            	chance = 0.04;
	                il_main = #weapon/-rare(1)/300-350;
	                il_main = #armor/-rare(1)/600-800;
                    il_main = #*/-rare(1)/300-350;
                }
				[oneof*]
				{
                	chance = 0.02;
	                il_main = #weapon/-unique(2)/300-350;
	                il_main = #armor/-unique(2)/600-800;
                    il_main = #*/-unique(2)/300-350;
	            }
			}
		}
	}
}
