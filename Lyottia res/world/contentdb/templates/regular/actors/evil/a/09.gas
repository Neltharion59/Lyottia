				[anim_files]
				{
					00 = dff;
					01 = dff-02;
				}
			}
			[chore_magic]
			{
				chore_stances = 0,5;
				skrit = select_attack;
				[anim_files]
				{
					00 = mg;
					01 = mg-02;
				}
			}
			[chore_misc]
			{
				chore_stances = ignore;
				skrit = select_transition;
				[anim_files]
				{
					drnk = a_c_gah_or_fs1_dk;
					gtup = a_c_gah_or_fs0_up;
					look = a_c_gah_or_fs0_dsf;
					talk = a_c_gah_or_fs0_dsf-02;
					wyme = a_c_gah_or_fs0_dsf-03;
					ulor = a_c_gah_or_fs0_dsf-04;
					hddl = a_c_gah_or_fs0_dsf-05;
					hdup = a_c_gah_or_fs0_dsf-06;
					knee = a_c_gah_or_fs1_dsf-03;
					lstn = a_c_gah_or_fs1_dsf-04;
                    		frtd = a_c_gah_or_fs0_dsf-10;
                    		ulo1 = a_c_gah_or_fs0_dsf-04;
                    		sit1 = a_c_gah_or_fs0_dsf-08;
					hoe1 = a_c_gah_or_fs5_dsf-03;
				}
			}
			[chore_walk]
			{
				chore_stances = 0,1,2,3,4,5,6,7,8;
				skrit = select_walk;
				[anim_files] { 00=rl; }
			}
		}
