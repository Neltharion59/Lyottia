	{
		model = m_c_eam_orc_pos_a0;
		[textures]
		{
			0 = b_c_eam_orc_001;
		}
		[voice]
		{
			[die]			{ priority = high; * = s_e_die_bandit; }
			[enemy_spotted]	{ priority = high; * = s_e_call_bandit_SED; }
			[hit_critical]	{ priority = low; * = s_e_hit_bandit_SED; }
			[hit_glance]	{ priority = low; * = s_e_hit_bandit_SED; }
