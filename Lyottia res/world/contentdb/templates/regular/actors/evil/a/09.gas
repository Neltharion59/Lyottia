	[common]
	{
		membership = monster, party_bandit_ranged, bandit;
		screen_name="Orc Bandit";
	}
	[guts_manager]
	{
		effect_name = melee_hit_2;
	}
	[inventory]
	{
		spew_equipped_kill_count = <ignore>;
	}
	[mind]
	{
		com_channels = dyn_party, bandit;
		com_range = 8.0;
