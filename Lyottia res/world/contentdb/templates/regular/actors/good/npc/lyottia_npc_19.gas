[t:template,n:lyottia_19_goblin_merchant]
{
	category_name = "1W_shopkeep";
	doc = "Lyottia 19 Goblin Merchant";
	specializes = npc;

	[actor]
	{
		portrait_icon = b_gui_ig_i_ic_c_neener;
        [skills]
		{
			dexterity = 10, 0;
			intelligence = 100, 0;
			strength = 10, 0;
		}
	}
	[aspect]
	{
		model = m_c_eam_ggt_pos_1;

        draw_selection_indicator = TRUE;
		use_range = 1.0;
		is_ghost_usable = TRUE;
        [voice]
		{
			[die]			{ priority = high; * = s_e_die_goblin_SED;	}
