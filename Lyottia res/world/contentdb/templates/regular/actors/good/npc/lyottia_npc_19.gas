		}
	}
	[body]
	{
		min_move_velocity = 1.90;
		avg_move_velocity = 2.510000;
		[bone_translator]
		{
			body_anterior = bip01_head;
			body_mid = bip01_spine2;
			body_posterior = bip01_pelvis;
			kill_bone = bip01_spine2;
			shield_bone = shield_grip;
			weapon_bone = weapon_grip;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_eam_ggt_fs;
			[chore_attack]
			{
				chore_stances = 1;
				skrit = select_attack;
				[anim_files]
				{
					0000 = at;
					0001 = at-02;
					qffg = dff;
				}
			}
			[chore_default]
			{
				chore_stances = 1;
				skrit = infinite_loop;
				[anim_files] { 00=dfs; }
			}
			[chore_die]
			{
				chore_stances = 1;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 1;
				skrit = select_fidget;
				[anim_files] { 00=dff; }
			}
			[chore_walk]
			{
				chore_stances = 1;
				skrit = select_walk;
				[anim_files] { 00=wl; }
			}
		}
		[weapon_scales]
		{
			as_single_melee	= 0.75, 0.75, 0.75;
		}
	}
	[common]
	{
		membership = monster;
        screen_name = "Gatlik the Hoarder";
	}
	[conversation] {}
	[guts_manager]
	{
		effect_name = melee_hit_2;
	}
    [inventory]
	{
		[store_pcontent]
		{

			full_ratio = 1;
			[armor]
			{
				[all*]
				{
					il_main = #body/400-700;
					max = 20;
					min = 20;
				}
				[all*]
				{
					il_main = #boots/300-700;
					max = 20;
					min = 20;
				}
				[all*]
				{
					il_main = #gloves/300-700;
					max = 20;
					min = 20;
				}
				[all*]
				{
					il_main = #helm/300-700;
					max = 20;
					min = 20;
				}
			}
			[shields]
			{
				[all*]
				{
					il_main = #shield/300-700;
					max = 20;
					min = 20;
				}
			}
			[weapons]
			{
                [all*]
				{
					il_main = #melee/220-290;
					max = 24;
					min = 24;
				}
				[all*]
				{
					il_main = #ranged/220-290;
					max = 24;
					min = 24;
				}
			}
            [magic]
			{
				[all*]
				{
					il_main = #spell/85-95;
					max = 10;
					min = 10;
				}
				[all*]
				{
					il_main = #spell/75-85;
					max = 10;
					min = 10;
				}
				[all*]
				{
					il_main = #spell/60-75;
					max = 10;
					min = 10;
				}
			}
			[misc]
			{
                [all*]
				{
					il_main = #spellbook/180-240;
					max = 5;
					min = 5;
				}
				[all*]
				{
					il_main = book_glb_magic_01;
					max = 3;
					min = 3;
				}
			}
		}
	}
    [mind]
	{
		actor_may_attack = false;
        actor_may_be_attacked = false;
		jat_talk = world\ai\jobs\common\job_talk.skrit;
		melee_engage_range = 10;
		personal_space_range = 0.7;
		ranged_engage_range = 10;
		sight_range = 10.0;
	}
    [respawn_shrine] {}
	[store]
	{
		item_markup = 2;

		[item_restock]
		{
			potion_health_super = 9;
			potion_mana_super = 9;
			potion_rejuvenation_super = 3;

			scroll_resurrect = 4;

            spell_resurrect = 1;
            spell_revive = 1;

            spell_healing_hands = 1;
            spell_battle_healing = 1;

            spell_zap = 1;
            spell_fireshot = 1;
		}
	}
	[water_effects] {}
}
