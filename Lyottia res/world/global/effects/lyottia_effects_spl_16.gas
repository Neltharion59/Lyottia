			sfx start $pcloud3;

			sfx create fire #TARGET 
				"must_update()color0(.400,.839,1.000)dur($dur)count(7)velocity(0,2,0)
				accel(0,0,0)alphafade(.4)flamesize(.3)max_radius(30)
				min_displace(.4)max_displace(.5)";
			set $speckle1 #POP;
