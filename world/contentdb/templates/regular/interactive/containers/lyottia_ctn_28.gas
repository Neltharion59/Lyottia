[t:template,n:lyottia_28_rack_weapon]
{
	category_name =	"container";
	doc	= "Lyottia 28 Weapon Rack";
	specializes	= prop;
	[aspect]
	{
		model =	m_i_csl_rack-weapon;
		[textures]
		{
			0 =	b_w_weapons;
			1 =	b_i_csl_lyottia_rack_weapon_02;
		}
	}
	[generator_object_pcontent]
	{
		create_msg = WE_REQ_USE;
		one_shot = true;
	}
	[common]
	{
		screen_name = "Weapon Rack";
		rollover_display = true;
	}
	[inventory]
	{
		[delayed_pcontent]
		{
			[oneof*]
			{
				[oneof*]
				{
                    chance = 0.85;

					il_main	= #melee/400-800;
                    il_main	= #ranged/400-800;

				}
                [oneof*]
                {
                    chance = 0.15;

					il_main	= #melee/-rare(1)/400-800;
                    il_main	= #ranged/-rare(1)/400-800;

                    il_main	= #melee/-unique(2)/400-800;
                    il_main	= #ranged/-unique(2)/400-800;

                }
			}
		}
	}
}
