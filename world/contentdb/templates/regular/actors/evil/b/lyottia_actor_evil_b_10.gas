[t:template,n:lyottia_10_elf_mage_boss_super]
{
	category_name = "1W_evil_b";
	doc = "lyottia 10 elf mage boss boss super";
	specializes = lyottia_10_elf_mage_base;
	[actor]
	{
		[skills]
		{
			strength 		=  40, 0;
			intelligence 	=  100, 0;
			dexterity 		=  60, 0;
            nature_magic 	=  64, 0;
		}
	}
    [aspect]
    {
		experience_value = 812000;
		life = 13017;
		max_life = 13017;
        mana = 5120;
        max_mana = 5120;

		life_recovery_unit  = 1;
		life_recovery_period = 4;
		mana_recovery_unit  = 2;
		mana_recovery_period = 3;
        [textures]
        {
            0 = b_c_eam_lyottia_elf_01_boss;
        }
    }
	[body]
	{
		max_move_velocity = 4.5;
		min_move_velocity = 4.5;
		avg_move_velocity = 4.5;
	}
	[common]
	{
		screen_name="High Priest Adratah";
		membership = party_larch_boss,monster,immune_charm,immune_control,immune_freeze,immune_polymorph,immune_align_change,immune_explode;
		[template_triggers]
		{
			[*]
			{
				condition* = receive_world_message("WE_ENTERED_WORLD");
				single_shot = true;
				no_trig_bits = true;
				action* = call_sfx_script("unique_ray_green(sgx)");
				action* = call_sfx_script("unique_light_green(sgx)");
			}
		}
	}
	[defend] { defense=500; }
    [inventory]
    {
		selected_active_location = il_active_primary_spell;
		[equipment]
		{
			es_weapon_hand = lyottia_10_elf_wpn_staff_nmagic_boss;
		}
		[other]
		{
			il_active_primary_spell = lyottia_10_elf_spell_ensnare_boss;
			il_active_secondary_spell = lyottia_10_elf_spl_roots_boss;
			il_spell_3 = lyottia_10_elf_spl_leaf_spray_boss;
			il_spell_4 = lyottia_10_elf_spl_mana_shield;
			il_spell_5 = lyottia_10_elf_spl_healing_wind;
			il_spell_6 = lyottia_10_monster_spl_orb_leaf_boss;
			il_spell_7 = lyottia_10_elf_spell_summon_spectre;
		}
		[pcontent]
		{
			[all*]
			{
                [gold*]
                {
                    max = 76081;
                    min = 42781;
                }
				[all*]
				{
					il_main = potion_mana_super;
					il_main = potion_health_super;
					min = 1;
					max = 2;
				}
                [oneof*]
                {
                    il_main = #weapon/100-160;
                    il_main = #armor/330-380;
                    il_main = #spell/42-64;
                    il_main = #*/100-160;

                    min = 2;
                    max = 2;
                }
                [oneof*]
                {
                    il_main = #weapon/-rare(1)/140-185;
                    il_main = #armor/-rare(1)/360-420;
                    il_main = #*/-rare(1)/140-185;
                    il_main = #weapon/-unique(2)/140-185;
                    il_main = #armor/-unique(2)/360-420;
                    il_main = #*/-unique(2)/140-185;

                    min = 3;
                    max = 3;
                }
			}
		}
    }
    [mind]
    {
        jat_cast 						= world\ai\jobs\common\job_cast.skrit
			?rand_spell					= true;
    }
}
