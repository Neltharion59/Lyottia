					il_main = #*/524-578;
					il_main = #armor/900-1500;
                	min = 2;
                	max = 3;
				}
				[oneof*]
				{
                	min = 2;
                	max = 3;
	                il_main = #weapon/-rare(1)/524-578;
	                il_main = #armor/-rare(1)/900-1500;
                    il_main = #*/-rare(1)/524-578;
                }
				[oneof*]
				{
                	min = 1;
					max = 2;
	                il_main = #weapon/-unique(2)/524-578;
	                il_main = #armor/-unique(2)/900-1500;
                    il_main = #*/-unique(2)/524-578;
	            }
				[gold*]
				{
					max = 1281020;
					min = 1242010;
                    piles = 3 - 6;
				}
			}
		}
	}
	[mind]
	{
		jat_cast 						= world\ai\jobs\common\job_cast.skrit
			?rand_spell					= true;

		jat_fidget						= world\ai\jobs\common\job_fidget.skrit;

