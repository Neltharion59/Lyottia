[lyottia_conversation_02_staff_collector_b4_quest_first]
{
	[text*]
	{
		activate_quest* = lyottia_quest_02_trade_fire_staff,0;
	  b quest_dialog = true;
		screen_text = "Greetings, traveler. You have surely heard of Kelvethan of The Lava Gardens, the fabled grand wizard of fire-based magic. Our expedition, if you can call it that, is here to study his works. Personally, I am interested in his Firesteel Staff. Should you ever come across that brilliant work of art. come find me. I'll gladly exchange some nice items with you for it.";
	}
}
[lyottia_conversation_02_staff_collector_b4_quest_next]
{
	[text*]
	{
		screen_text = "So far, this journey has been a disappointment. No artifacts found and the krug cult interfering with local magic sources. I might as well have just practiced summoning Ketrils in one of the academy's invocation chambers.";
	}
}
[lyottia_conversation_02_staff_collector_ask_for_staff]
{
	[text*]
	{
		activate_quest* = lyottia_quest_02_trade_fire_staff,1;
	  b quest_dialog = true;
		screen_text = "By the Mace of Agarrus, you have staff. My offer still stands. Drop it for me, and I'll reward you handsomely. My ring can offer you more power than the staff. Only us, the specialists, know how to use it properly.";
	}
}
[lyottia_conversation_02_staff_collector_after_quest_first]
{
	[text*]
	{
		activate_quest* = lyottia_quest_02_trade_fire_staff,3;
		complete_quest* = lyottia_quest_02_trade_fire_staff;
	  b quest_dialog = true;
		screen_text = "By the hairy buttocks of the dwarven king of Ahaagan Citadel, the power contained within this thing makes me loose my edge. Thank you friend. Here, as I promised. Hope this works.";
	}
}
[lyottia_conversation_02_staff_collector_after_quest_next]
{
	[text*]
	{
		screen_text = "I've had the staff in my hands only for a brief moment, but it's enough to call the expedition a huge success already. Thank you again, my friend.";
	}
}