[lyottia_conversation_02_krug_hunter_b4_quest_first]
{
	[text*]
	{
		activate_quest* = lyottia_quest_02_krug_shamans,0;
	  b quest_dialog = true;
		screen_text = "I joined this expedition to embrace the powers that once Kelvethan of The Lava Gardens invoked here. However, there is an interference here that prevents me from fully tapping into it. The local krug cultists must be the cause - I can tell by the smell of their magic. If you slay three of their gurus, we might finally start with our studies. You, on the other hand, might help yourself to their possessions. You should be able to find them once you reach the bridge across the river in the canyon. Follow the river up the stream to the great waterfall, on this side of the river bank. They should be easy to find then.";
	}
}
[lyottia_conversation_02_krug_hunter_b4_quest_next]
{
	[text*]
	{
		screen_text = "You should be able to find the krug gurus once you reach the bridge across the river in the canyon. Follow the river up the stream to the great waterfall, on this side of the river bank. They should be easy to find then.";
	}
}
[lyottia_conversation_02_krug_hunter_after_quest_first]
{
	[text*]
	{
		screen_text = "Well, blast my ear wax with fireshot, you did it. The gurus are all dead. The powers Kelvethan left behind are free for us to tap from again. Thank you, my friend. Here, something for your troubles.";
	}
}
[lyottia_conversation_02_krug_hunter_after_quest_next]
{
	[text*]
	{
		screen_text = "Kelvethan's powers magnify my spells greatly, shortly after tapping to it. I wonder what they will be like after a month or two.";
	}
}
