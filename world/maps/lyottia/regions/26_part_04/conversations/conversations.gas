[lyottia_conversation_26_trainer_first]
{
	[text*]
	{
		choice = shop;
		screen_text = "Kingslayer, I have a favor to ask. For generations, we allowed the trog to reside in a secret cavern nearby. Every year or so, we would send our young lads to slaughter them as part of their training. They were slain in large numbers, but never fully extinct.\n\nWith our garrison laying dead in the dust, our citadel is doomed to be overcome by our enemies. However, the trog are the lowest of the low. Please, I ask you to find the cave on your way out, and exterminate the vermin.";
	  f scroll_rate = 10.000000;
	}
}
[lyottia_conversation_26_trainer_next]
{
	[text*]
	{
		screen_text = "You should be able to find the cave easily. Just look to your left on your way out.";
	  f scroll_rate = 10.000000;
	}
}
