[lyottia_conversation_26_advisor_first]
{
	[text*]
	{
		activate_quest* = lyottia_quest_26_dwarves,12;
	  b quest_dialog = true;
		screen_text = "So, you have ravaged our army, murdered our wives and children, and slain our king. Tell me, traitor, was the price the seck promised you woth it?\n\nA year ago, we received message of intended assassination of our king. When you showed up, we suspected the day has come. Now, you are telling me our citadel fell to our ally, and the fould seck tricked us to fight each other? Leave. Just leave. Our citadel is powerless against the seck now. Seek the city of Northiandria. It is the only power in the kingdom left that might stand a chance. We will await the citadel's fall with it.";
	  f scroll_rate = 10.000000;
	}
}
[lyottia_conversation_26_advisor_next]
{
	[text*]
	{
		screen_text = "Seek Northiandria. That is the only thing to be done against the seck now.";
	  f scroll_rate = 10.000000;
	}
}
